pipeline {
    
    agent any

    parameters {
        string(name: "IMAGE", description: "URL for the ECR image.")
        choice(name: 'microservice', choices: ['user', 'underwriter', 'bank', 'transaction', 'gateway'], description: 'selection for what microservice is being updated.') }
    }

    environment {
            GATEWAY_IMAGE = "${params.IMAGE}"
    }

    stages {

        stage("Process") {
            steps{
                dir('k8s/GATEWAY'){  
                    sh "envsubst < gateway.yaml"
                }
            }
        }

        stage("Configure"){
            steps{
                withAWS(credentials: 'AWS_Ricky', region: 'us-west-1'){
                    sh "aws eks update-kubeconfig --name rl-aline"
                }
            }
        }

        stage("Update Deployment"){
            steps{
                dir('k8s/gateway'){
                    withAWS(credentials: 'AWS_Ricky', region: 'us-west-1'){
                        sh """
                        kubectl apply -f gateway-configmap.yaml
                        kubectl apply -f gateway-service.yaml
                        envsubst < gateway.yaml | kubectl apply -f -
                        """
                    }
                }
            }
        }


    }

}