pipeline {
    
    agent any

    environment {
            AWS_ACCOUNT_ID = credentials('AWS_ACCOUNT_ID')
            AWS_REGION = credentials('AWS_Region')
            REPO_NAME = "gateway-rl"
    }

    stages {

        stage("Process") {
            steps{
                dir('k8s/gateway'){  
                    sh "envsubst < gateway.yaml"
                }
            }
        }

        stage("Configure"){
            steps{
                withAWS(credentials: 'AWS_Ricky', region: "$AWS_REGION"){
                    sh "aws eks update-kubeconfig --name rl-aline"
                }
            }
        }

        stage("Update Deployment"){
            steps{
                dir('k8s/gateway'){
                    withAWS(credentials: 'AWS_Ricky', region: "$AWS_REGION"){
                        sh """
                        export GATEWAY_IMAGE="$AWS_ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com/$REPO_NAME:latest" 
                        kubectl apply -f gateway-configmap.yaml
                        kubectl apply -f gateway-service.yaml
                        envsubst < gateway.yaml | kubectl apply -f -
                        """
                    }
                }
            }
        }


    }

}