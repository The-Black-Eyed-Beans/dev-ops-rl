pipeline {
    
    agent any
    
    environment {
            AWS_ACCOUNT_ID = credentials('AWS_ACCOUNT_ID')
            AWS_REGION = credentials('AWS_Region')
            REPO_NAME = "transaction-microservice-rl"
    }

    stages {

        stage("Process") {
            steps{
                dir('k8s/microservices'){  
                    sh "envsubst < transaction.yaml"
                }
            }
        }

        stage("Configure"){
            steps{
                withAWS(credentials: 'AWS_Ricky', region: "$AWS_REGION"){
                    sh "aws eks update-kubeconfig --name rl-aline"
                }
            }
        }

        stage("Update Deployment"){
            steps{
                dir('k8s/microservices'){
                    withAWS(credentials: 'AWS_Ricky', region: "$AWS_REGION"){
                        sh '''
                        export TRANSACTION_IMAGE="$AWS_ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com/$REPO_NAME:latest"
                        envsubst < tranasaction.yaml | kubectl apply -f -
                        '''
                    }
                }
            }
        }


    }

}