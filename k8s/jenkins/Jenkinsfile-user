pipeline {
    
    agent any

    parameters {
        string(name: "IMAGE", default:"${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/$REPO_NAME:latest" description: "URL for the ECR image.")
    }

    environment {
            USER_IMAGE = "${params.IMAGE}"
            AWS_ACCOUNT_ID = credentials('AWS_ACCOUNT_ID')
            AWS_REGION = credentials('AWS_Region')
    }

    stages {

        stage("Process") {
            steps{
                dir('k8s/microservices'){  
                    sh "envsubst < user.yaml"
                }
            }
        }

        stage("Configure"){
            steps{
                withAWS(credentials: 'AWS_Ricky', region: credentials('AWS_Region')){
                    sh "aws eks update-kubeconfig --name rl-aline"
                }
            }
        }

        stage("Update Deployment"){
            steps{
                dir('k8s/microservices'){
                    withAWS(credentials: 'AWS_Ricky', region: credentials('AWS_Region')){
                        sh "envsubst < user.yaml | kubectl apply -f -"
                    }
                }
            }
        }


    }

}