pipeline {
    
    agent any

    parameters {
        string(name: "IMAGE", description: "URL for the ECR image.")
    }

    environment {
            USER_IMAGE = "${params.IMAGE}"
    }

    stages {

        stage("Process") {
            steps{
                dir('k8s/microservices'){  
                    sh "envsubst < user.yaml"
                }
            }
        }

        stage("Configure"){
            steps{
                withAWS(credentials: 'AWS_Ricky', region: 'us-west-1'){
                    sh "aws eks update-kubeconfig --name rl-aline"
                }
            }
        }

        stage("Update Deployment"){
            steps{
                dir('k8s/microservices'){
                    withAWS(credentials: 'AWS_Ricky', region: 'us-west-1'){
                        sh "envsubst < user.yaml | kubectl apply -f -"
                    }
                }
            }
        }


    }

}